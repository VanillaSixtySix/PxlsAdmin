                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Username</th>
                                <th>Signup Time</th>
                                <th>Logins</th>
                                <th>Signup IP</th>
                                <th>Pixel Count (this canvas)</th>
                                <th>Last IP</th>
                                <th>Banned?</th>
                                <th>Ban Reason</th>
